    function UpdateBooth() {
        var obj = {};
        obj.BooTitle = $("#BooTitle").val();
        if (obj.BooTitle == "") {
            alert("标题不能为空");
            return;
        }
        obj.BooNo = $("#BooNo").val();
        if (obj.BooNo=="") {
            alert("编号不能为空");
            return;
        }
        obj.MarkId = $("#MarkId option:selected").val();
        obj.BooArea = $("#BooArea").val();
         if (obj.BooArea=="") {
            alert("面积不能为空");
            return;
        }
        obj.BooLen = $("#BooLen").val();
        if (obj.BooLen=="") {
            alert("长度不能为空");
            return;
        }
        obj.BooWid = $("#BooWid").val();
          if (obj.BooWid=="") {
            alert("宽度不能为空");
            return;
        }
        obj.BooLabel = $("#BooLabel").val();
         if (obj.BooLabel=="") {
            alert("描述不能为空");
            return;
        }
        obj.BooRent = $("#BooRent").val();
        if (obj.BooRent=="") {
            alert("租金不能为空");
            return;
        }
        obj.BooDead = $("#BooDead").val();
         if (obj.BooDead=="") {
            alert("租期不能为空");
            return;
        }
        $.post('http://localhost:52229/api/market/UpdateBooth', { obj: obj }, function (success) {
            if (success >= 1) alert('添加成功'); else { alert('添加失败'); }
        });
    }



</script>
