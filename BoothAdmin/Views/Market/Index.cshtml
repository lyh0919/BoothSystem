
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>table模块快速使用</title>
    @*<link rel="stylesheet" href="/layui/css/layui.css" media="all">*@
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
</head>
<body>

    <table id="demo" lay-filter="test"></table>
 

    <script src="~/layuiadmin/layui/layui.js"></script>
    <script>
        layui.use('table', function () {
            var table = layui.table;

            //第一个实例
            table.render({
                elem: '#demo'
                , height: 312
                , url: 'http://localhost:52229/api/market/showmarket?page=1&limit=10' //数据接口
                , page: true //开启分页
                , cols: [[ //表头
                    { field: 'id', title: 'ID', width: 80, sort: true, fixed: 'left' }
                    , { field: 'markName', title: '用户名', width: 80 }
                    , { field: 'markPhone', title: '性别', width: 80}
                    , { field: 'markAccName', title: '城市', width: 80 }
                    , { field: 'markAddress', title: '签名', width: 177 }
                    , { field: 'markSortId', title: '积分', width: 80 }
                    , { field: 'createTime', title: '评分', width: 80}
                    , { field: 'updateTime', title: '职业', width: 80 }
                    , { field: 'IsEnable', title: '财富', width: 135, sort: true }
                ]]
            });

        });
    </script>
</body>
</html>
