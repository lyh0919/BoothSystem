</head>
<body>

    <h4>添加摊位</h4>
    <hr />
    <form>
        <div>
            <div class="layui-form-item">
                <div class="layui-form-item">
                    <label class="layui-form-label">选择摊位</label>
                    <div class="layui-input-inline">
                        <select id="BooId" name="BooId" onchange="ShowMarket()">
                            <option>选择竞拍摊位</option>
                            @foreach (var item in ViewBag.ShowBooInfo)
                            {
                                if (ViewBag.ShowBooInfo.Id == item.Id)
                                {
                                    <option value="@item.Id" selected="selected">@item.BooTitle</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.BooTitle</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">竞拍开始时间:</label>
                <div class="layui-input-block">
                    <input type="datetime" name="CreateTime" id="CreateTime" lay-verify="title" value="@Model.CreateTime" autocomplete="off" placeholder="请选择日期和时间" class="layui-input">
                </div>
            </div>

            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">竞拍结束时间：</label>
                    <div class="layui-input-inline">
                        <input type="number" name="EndTime" id="EndTime" placeholder="请选择日期和时间" value="@Model.EndTime" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">保证金</label>
                    <div class="layui-input-inline">
                        <input type="text" name="CashMoney" id="CashMoney" placeholder="填写保证金" value="@Model.CashMoney" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">起拍价</label>
                    <div class="layui-input-inline">
                        <input type="text" name="StartMoney" id="StartMoney" placeholder="请写起拍价" value="@Model.StartMoney" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">加价幅度</label>
                    <div class="layui-input-inline">
                        <input type="text" name="MarkUpMoney" id="MarkUpMoney" placeholder="请写加价幅度" value="@Model.MarkUpMoney" autocomplete="off" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">保留价</label>
                    <div class="layui-input-inline">
                        <input type="text" name="ResMoney" id="ResMoney" autocomplete="off" value="@Model.ResMoney" class="layui-input">
                    </div>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">延迟周期</label>
                    <div class="layui-input-inline">
                        <input type="date" name="DefTime" id="DefTime" autocomplete="off" value="@Model.DefTime" class="layui-input">
                    </div>
                </div>
            </div>
            <button type="button" class="layui-btn layui-btn-warm layui-btn-radius" onclick="UptBooths()" style="margin-right:600px">添加</button>
        </div>

    </form>

</body>
</html>


