    function UptBooths() {
        var obj = {};
        obj.CreateTime = $("#CreateTime").val();
        if (obj.CreateTime == "") {
            alert("开始时间不能为空");
            return;
        }
        obj.EndTime = $("#EndTime").val();
        if (obj.EndTime == "") {
            alert("结束时间不能为空");
            return;
        }
        obj.BooId = $("#BooId option:selected").val();
        obj.CashMoney = $("#CashMoney").val();
        if (obj.CashMoney == "") {
            alert("保证金不能为空");
            return;
        }
        obj.StartMoney = $("#StartMoney").val();
        if (obj.StartMoney == "") {
            alert("开始价格不能为空");
            return;
        }
        obj.MarkUpMoney = $("#MarkUpMoney").val();
        if (obj.MarkUpMoney == "") {
            alert("加价幅度不能为空");
            return;
        }
        obj.ResMoney = $("#ResMoney").val();
        if (obj.ResMoney == "") {
            alert("加价幅度不能为空");
            return;
        }

        $.post('http://localhost:52229/api/market/UpdateBooAucal', { obj: obj }, function (success) {
            if (success >= 1) alert('添加成功'); else { alert('添加失败'); }
        });
    }



