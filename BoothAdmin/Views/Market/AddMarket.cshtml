</html>


<script>
    
////对表单重新渲染  复选框、下拉框等
//    layui.use('form', function () {
//        var form = layui.form;
//        form.render();
    //    });

    $(function () {
        GetCity();
    });
     function GetCity() {
        $.get('http://localhost:52229/api/market/getcity?id=1', function (res) {
            $("#quiz1").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += '<option value="' + v.id + '">' + v.cityName + '</option>';

            });
            $("#quiz1").append(html);
            //对表单重新渲染  复选框、下拉框等
            layui.use('form', function () {
                var form = layui.form;
                form.render();
            });
        });
    }
    function GetCity1() {
        var id = $('select[name="demo1"] option:selected').val();
        $.get('http://localhost:52229/api/market/getcity?id=' + id, function (res) {
            $("#quiz2").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += '<option value="' + v.id + '">' + v.cityName + '</option>';

            });
            $("#quiz2").append(html);
            //对表单重新渲染  复选框、下拉框等
            layui.use('form', function () {
                var form = layui.form;
                form.render();
            });
        });
    }


    function GetCity2() {
        var id = $('select[name="demo2"] option:selected').val();
        $.get('http://localhost:52229/api/market/getcity?id=' + id, function (res) {
            $("#quiz3").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += '<option value="' + v.id + '">' + v.cityName + '</option>';

            });
            $("#quiz3").append(html);
            //对表单重新渲染  复选框、下拉框等
            layui.use('form', function () {
                var form = layui.form;
                form.render();
            });
        });
    }

    //$(function () {
    //    ShowProvinces();
    //});

    function AddMarkets() {
        var obj = {};

        obj.MarkName = $("#MarkName").val();
        if (obj.MarkName == null) {
            alert("市场部名称不能为空");
            return false;
        }
        else {
            obj.MarkName = obj.MarkName;
        }

        obj.MarkAccName = $("#MarkAccName").val();
        if (obj.MarkAccName == null) {
            alert("市场管理员不能为空");
            return false;
        }
        else {
            obj.MarkAccName = obj.MarkAccName;
        }

        obj.MarkPhone = $("#MarkPhone").val();
        if (!(/^[1][3,4,5,6,7,8,9][0-9]{9}$/.test(obj.MarkPhone))) {
            alert("手机号码有误，请重填");
            return false;
        }
        else {
            obj.MarkPhone = obj.MarkPhone;
        }
        var Address = $("#MarkAddress1").val() + $("#MarkAddress2").val() + $("#MarkAddress3").val();
        obj.MarkAddress = Address;

        obj.IsEnable = $("input[type='radio']:checked").val();

        $.ajax({
            url: "/Market/Add",
            data: obj,
            dataType: "json",
            type: "post",
            success: function (res) {
                if (res >= 1) {
                    alert("添加成功");
                }
                else {
                    alert("添加失败");
                }
            }
        })

    }

    function ShowProvinces() {
        $.ajax({
            url: "/Market/ShowProvince",
            dataType: "json",
            type: "get",
            success: function (res) {
              
                var obj = "";
                $.each(res, function (i, n) {
                   
                    obj += "<option id=" + n.pId + ">" + n.cityName + "</option>"

                });
               
                //  $("#MarkAddress1").appendTo("<option value="">请选择你所在的省</option>");
                $("#MarkAddress1").append(obj);
              
            }

        })
    }

    function ShowProvince() {
        var code = $("#MarkAddress1").val();
        $.ajax({
            url: "/Market/ShowCity?id=" + code,
          
            dataType: "json",
            type: "get",
            success: function (res) {
                var obj = "";
                $.each(res, function (i, n) {
                      alert(n);
                    obj += "<option id=" + n.pId + ">" + n.cityName + "</option>"

                });
              
                //  $("#MarkAddress2").appendTo("<option value="">请选择你所在的城市</option>");
                $("#MarkAddress2").append(obj);
              
            }

        });
    }

    function ShowCity() {
        var code = $("#MarkAddress2").val();
        $.ajax({
            url: "/Market/ShowArea?id=" + code,
         
            dataType: "json",
            type: "get",
            success: function (res) {
                var obj = "";
                $.each(res, function (i, n) {
                    obj += "<option id=" + n.pId + ">" + n.cityName + "</option>"

                });
      
                //  $("#MarkAddress2").appendTo("<option value="">请选择你所在的区</option>");
                $("#MarkAddress3").append(obj);
            }

        });
    }
</script>
