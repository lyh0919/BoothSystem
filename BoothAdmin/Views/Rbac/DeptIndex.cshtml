
@{
    ViewData["Title"] = "DeptIndex";
    Layout = null;
}

<link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
<div class="layui-card">
    <div class="layui-card-header">
        <h1>部门管理</h1>
    </div>
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote role_search">
            <div class="layui-inline">
                <a data-method="offset" data-type="auto" onclick="Add()" class="layui-btn layui-btn-normal newsAdd_btn">
                    <i class="layui-icon layui-icon-add-1"></i>
                    添加菜单
                </a>
            </div>

        </blockquote>
    </div>
</div>

<div>
    <table class="layui-table">
        <thead>
            <tr>
                <th>部门名称</th>
                <th>职能描述</th>
                <th>添加时间</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="dt">
        </tbody>

    </table>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/layuiadmin/layui/layui.js"></script>
<script>
    $(function () {
        DeptShow();
    });

    function DeptShow() {
        $.get('http://localhost:52229/api/rbac/getdept', function (res) {
            $("#dt").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += "<tr>";
                html += "<td>" + v.deptName + "</td>";/*isEnable*/
                html += "<td>" + v.deptDesc + "</td>";
                html += "<td>" + v.createTime + "</td>";
                html += "<td>" + (v.isEnable = "1" ? "启用" : "禁用") + "</td>";
                html += "<td><a href=' javascript:Upt(" + v.id + ")'>编辑&nbsp;<a href='#' onclick='Del(" + v.id + ")'>删除</td>";
                html += "</tr>";
            });
            $("#dt").append(html);
        });
    }

    //删除
    function Del(id) {
        if (confirm("确认删除吗")) {
            alert(id);
            $.ajax({
                url: "http://localhost:52229/api/rbac/deldept",
                data: { id: id },
                dataType: "json",
                contentType: "application/json",
                type: "delete",
                success: function (res) {
                    if (res > 0) {
                        alert("删除成功");
                        DeptShow();
                    }
                }
            });
        }
    }
    //跳转添加弹出层
    function Add() {
        layui.use('layer', function () { //独立版的layer无需执行这一句
            //var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句


            layer.open({
                type: 1
                ,title:'添加部门'
                ,area:["600px","400px"]
                , offset: 't' //具体配置参考：offset参数项
                , content:
                    '<div style="padding: 20px 100px;"><div class="layui-form-item">'+
                        '<label class= "layui-form-label" >部门名称</label>'+
                        '<div class="layui-input-inline">'+
                            '<input type="text" id="deptname" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">'+
                        '</div>' +
                        '<label class= "layui-form-label" >职能描述</label>' +
                        '<div class="layui-input-inline">' +
                            '<input type="text" id="deptdesc" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                        '</div>' +
                    '</div> '
                , btn: ['添加','取消']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , yes: function () {  //添加按钮
                    var dept = {};
                    dept.DeptName = $("#deptname").val();
                    dept.DeptDesc = $("#deptdesc").val();
                    $.ajax({
                        url: "http://localhost:52229/api/rbac/adddept",
                        data: JSON.stringify(dept),
                        dataType: "json",
                        contentType: "application/json",
                        type: "Post",
                        success: function (res) {
                            if (res > 0) {
                                alert("添加成功")
                                layer.closeAll();
                                DeptShow();
                            }
                        }
                    });

                }
                , btn2: function () {  //取消关闭
                    layer.closeAll();
                }
            });

        });
    }

    function Upt(id) {
        layui.use('layer', function () { //独立版的layer无需执行这一句
            //var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句


            layer.open({
                type: 1
                , title: '编辑部门'
                , area: ["600px", "400px"]
                , offset: 't' //具体配置参考：offset参数项
                , content:
                    '<div style="padding: 20px 100px;"><div class="layui-form-item">' +
                    '<label class= "layui-form-label" >部门名称</label>' +
                    '<div class="layui-input-inline">' +
                    '<input type="text" id="deptname" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                    '</div>' +
                    '<label class= "layui-form-label" >职能描述</label>' +
                    '<div class="layui-input-inline">' +
                    '<input type="text" id="deptdesc" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                    '</div>' +
                    '</div> '
                , btn: ['编辑', '取消']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , yes: function () {  //添加按钮
                    var dept = {};
                    dept.Id = id;
                    dept.DeptName = $("#deptname").val();
                    dept.DeptDesc = $("#deptdesc").val();
                    $.ajax({
                        url: "http://localhost:52229/api/rbac/uptdept",
                        data: JSON.stringify(dept),
                        dataType: "json",
                        contentType: "application/json",
                        type: "put",
                        success: function (res) {
                            if (res > 0) {
                                alert("修改成功")
                                layer.closeAll();
                                DeptShow();
                            }
                        }
                    });

                }
                , btn2: function () {  //取消关闭
                    layer.closeAll();
                }
            });

        });
    }
    
</script>

