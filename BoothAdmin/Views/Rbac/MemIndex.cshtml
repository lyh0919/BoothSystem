
@{
    ViewData["Title"] = "MemIndex";
    Layout = null;
}

<link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
<form class="layui-form">


    <div class="layui-card">
        <div class="layui-card-header">
            <h1>管理员管理</h1>
        </div>
        <div class="layui-card-body">
            <blockquote class="layui-elem-quote role_search">
                <div class="layui-inline">
                    <a data-method="offset" data-type="auto" onclick="Add()" class="layui-btn layui-btn-normal newsAdd_btn">
                        <i class="layui-icon layui-icon-add-1"></i>
                        添加成员
                    </a>
                </div>
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <input id="accname" type="text" value="" placeholder="请输入姓名" class="layui-input search_input">
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">所属部门</label>
                        <div class="layui-input-inline">
                            <select name="dept" id="deptid"  lay-verify="required" lay-search="">
                            </select>
                        </div>
                    </div>
                    <a class="layui-btn search_btn" onclick="searchData();"><i class="layui-icon layui-icon-search"></i> 查询</a>
                </div>
            </blockquote>
        </div>
    </div>

    <div>
        <table class="layui-table">
            <thead>
                <tr>
                    <th>账号</th>
                    <th>姓名</th>
                    <th>手机</th>
                    <th>所属部门</th>
                    <th>添加时间</th>
                    <th>最后登录</th>
                    <th>是否启用</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody id="dt">
            </tbody>

        </table>

    </div>
    <div id="demo" style="text-align:center">
        <button type="button" id="prev" onclick="Prev()" class="layui-btn layui-btn-primary layui-btn-sm"><i class="layui-icon">上一页</i></button>
        <button type="button" id="next" onclick="Next()" class="layui-btn layui-btn-primary layui-btn-sm"><i class="layui-icon">下一页</i></button>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/layuiadmin/layui/layui.js"></script>
<script>
    
    //对表单重新渲染  复选框、下拉框等
    layui.use('form', function () {
        var form = layui.form;
        form.render();
    });
    //页面加载
    $(function () {
        GetDept();//部门下拉框
        if (pageindex == 1) {
            $('#prev').attr("disabled", true);
        }
        AdminShow(pageindex);
    });

    var accname = $("#accname").val();
    var deptid = $('select[name="dept"] option:selected').val();

   

    var pageindex = 1;
    var pagesize = 2;
    var total = 0;
    var pages = Math.ceil(total / pagesize); //得到总页数
    //上一页
    function Prev() {
        
        $('#next').attr("disabled", false);
        if (pageindex == 1) {
            $('#prev').attr("disabled", true);
        }
        else {
            pageindex = pageindex - 1;
            AdminShow(pageindex);
        }
    }
    //下一页
    function Next() {
        
        $('#prev').attr("disabled", false);
        if (pageindex == pages) {
            $('#next').attr("disabled", true);
        }
        else {
            pageindex = pageindex + 1;
            AdminShow(pageindex);
        }
    }

    //显示
    function AdminShow(pageindex) {
        $.get('http://localhost:52229/api/rbac/getadmin?accName=' + accname + '&deptId=' + deptid + '&pageindex=' + pageindex + '&pagesize=' + pagesize, function (res) {
            total = res.count;
            $("#dt").empty();
            var html = "";
            $.each(res.members, function (i, v) {
                html += "<tr>";
                html += "<td>" + v.accNum + "</td>";/*isEnable*/
                html += "<td>" + v.accName + "</td>";
                html += "<td>" + v.accPhone + "</td>";
                html += "<td>" + v.deptName + "</td>";
                html += "<td>" + v.createTime + "</td>";
                html += "<td>" + v.updateTime + "</td>";
                html += "<td>" + (v.isEnable = "1" ? "启用" : "禁用") + "</td>";
                html += "<td><button type='button' onclick='Upt(" + v.id + ")' class='layui-btn layui-btn-sm'>编辑</button>&nbsp;<button type='button' onclick='Del(" + v.id + ")' class='layui-btn layui-btn-sm layui-btn-danger'>删除</button></td>";
                html += "</tr>";
            });
            $("#dt").append(html);
        });
    }
    //下拉框部门
    function GetDept() {
        $.get('http://localhost:52229/api/rbac/getdept', function (res) {
            $("#deptid").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += '<option value="' + v.id + '">' + v.deptName + '</option>';

            });
            $("#deptid").append(html);
            //对表单重新渲染  复选框、下拉框等
            layui.use('form', function () {
                var form = layui.form;
                form.render();
            });
        });
    }

    //下拉框角色
    function GetRole() {
        $.get('http://localhost:52229/api/rbac/getrole', function (res) {
            $("#roleid").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += '<option value="' + v.id + '">' + v.roleName + '</option>';

            });
            $("#roleid").append(html);
            //对表单重新渲染  复选框、下拉框等
            layui.use('form', function () {
                var form = layui.form;
                form.render();
            });
        });
    }

    //删除
    function Del(id) {
        if (confirm("确认删除吗")) {
            alert(id);
            $.ajax({
                url: "http://localhost:52229/api/rbac/deladmin",
                data: { id: id },
                dataType: "json",
                contentType: "application/json",
                type: "delete",
                success: function (res) {
                    if (res > 0) {
                        alert("删除成功");
                        AdminShow();
                    }
                }
            });
        }
    }



