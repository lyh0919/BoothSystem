                    str
                , btn: ['添加','取消']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , success: function () {
                    $.get('http://localhost:52229/api/rbac/getdept', function (res) {
                        $("#deptids").empty();
                        var html = "";
                        $.each(res, function (i, v) {
                            html += '<option value="' + v.id + '">' + v.deptName + '</option>';

                        });
                        $("#deptids").append(html);
                        //对表单重新渲染  复选框、下拉框等
                        layui.use('form', function () {
                            var form = layui.form;
                            form.render();
                        });
                    });
                    GetRole();
                }
                , yes: function () {  //添加按钮
                    var admin = {};
                    admin.AccNum = $("#adminnum").val();
                    admin.AccName = $("#adminname").val();
                    admin.AccPass = $("#accpass").val();
                    admin.AccPhone = $("#adminphone").val();
                    admin.DeptId = $('select[name="deptid"] option:selected').val();
                    admin.RoleId = $('select[name="roleid"] option:selected').val();
                    admin.IsEnable = $("input[name='isenable']:checked").val();
                    $.ajax({
                        url: "http://localhost:52229/api/rbac/addadmin",
                        data: JSON.stringify(admin),
                        dataType: "json",
                        contentType: "application/json",
                        type: "Post",
                        success: function (res) {
                            if (res > 0) {
                                alert("添加成功")
                                layer.closeAll();
                                AdminShow();
                            }
                        }
                    });
                    
                }
                , btn2: function () {  //取消关闭
                    layer.closeAll();
                }
                
            });

        });
    }
