
@{
    ViewData["Title"] = "RoleIndex";
    Layout = null;
}

<link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />

<div class="layui-card">
    <div class="layui-card-header">
        <h1>角色管理</h1>
    </div>
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote role_search">
            <div class="layui-inline">
                <a data-method="offset" data-type="auto" onclick="Add()" class="layui-btn layui-btn-normal newsAdd_btn">
                    <i class="layui-icon layui-icon-add-1"></i>
                    添加角色
                </a>
            </div>

        </blockquote>
    </div>
</div>

<div>
    <table class="layui-table">
        <thead>
            <tr>
                <th>角色名称</th>
                <th>角色描述</th>
                <th>成员数量</th>
                <th>添加时间</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="dt">
        </tbody>

    </table>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/layuiadmin/layui/layui.js"></script>
<script>
    $(function () {
        RoleShow();
    });
    //显示列表
    function RoleShow() {
        $.get('http://localhost:52229/api/rbac/getrole', function (res) {
            $("#dt").empty();
            var html = "";
            $.each(res, function (i, v) {
                html += "<tr>";
                html += "<td>" + v.roleName + "</td>";/*isEnable*/
                html += "<td>" + v.roleDesc + "</td>";
                html += "<td>" + v.peopleCount + "</td>";
                html += "<td>" + dateFormat(v.createTime) + "</td>";
                html += "<td>" + (v.isEnable = "1" ? "启用" : "禁用") + "</td>";
                html += "<td><a href='/Rbac/PowerIndex?rolename=" + v.roleName + "&id=" + v.id + "' >设置权限</a>&nbsp;<a href='#' onclick=Upt('" + v.id + "')>编辑</a>&nbsp;<a href='#' onclick=Del('" + v.id + "')>删除</a></td>";
                html += "</tr>";
            });
            $("#dt").append(html);
        });
    }
    //时间转换
    function dateFormat(datestr) {
        var date = new Date(datestr);
        var datestr = date.getFullYear() + "-" + (date.getMonth() + 1) + "-" +
            date.getDate() + " " + date.getHours() + ":" +
            date.getMinutes() + ":" + date.getSeconds();
        return datestr;
    }
    //删除
    function Del(id) {
        if (confirm("确认删除吗")) {
            alert(id);
            $.ajax({
                url: "http://localhost:52229/api/rbac/delrole",
                data: { id: id },
                dataType: "json",
                contentType: "application/json",
                type: "Get",
                success: function (res) {
                    if (res > 0) {
                        alert("删除成功");
                        RoleShow();
                    }
                }
            });
        }
    }
    //跳转添加弹出层
    function Add() {
        layui.use('layer', function () { //独立版的layer无需执行这一句
            //var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句


            layer.open({
                type: 1
                ,title:'添加角色'
                ,area:["600px","400px"]
                , offset: 't' //具体配置参考：offset参数项
                , content:
                    '<div style="padding: 20px 100px;"><div class="layui-form-item">'+
                        '<label class= "layui-form-label" >角色名称</label>'+
                        '<div class="layui-input-inline">'+
                            '<input type="text" id="rolename" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">'+
                        '</div>' +
                        '<label class= "layui-form-label" >角色描述</label>' +
                        '<div class="layui-input-inline">' +
                            '<input type="text" id="roledesc" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                        '</div>' +
                    '</div> '
                , btn: ['添加','取消']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , yes: function () {  //添加按钮
                    var role = {};
                    role.RoleName = $("#rolename").val();
                    role.RoleDesc = $("#roledesc").val();
                    $.ajax({
                        url: "http://localhost:52229/api/rbac/addrole",
                        data: JSON.stringify(role),
                        dataType: "json",
                        contentType: "application/json",
                        type: "Post",
                        success: function (res) {
                            if (res > 0) {
                                alert("添加成功")
                                layer.closeAll();
                                RoleShow();
                            }
                        }
                    });

                }
                , btn2: function () {  //取消关闭
                    layer.closeAll();
                }
            });

        });
    }

    function Upt(id) {
        layui.use('layer', function () { //独立版的layer无需执行这一句
            //var $ = layui.jquery, layer = layui.layer; //独立版的layer无需执行这一句


            layer.open({
                type: 1
                , title: '编辑角色'
                , area: ["600px", "400px"]
                , offset: 't' //具体配置参考：offset参数项
                , content:
                    '<div style="padding: 20px 100px;"><div class="layui-form-item">' +
                    '<label class= "layui-form-label" >角色名称</label>' +
                    '<div class="layui-input-inline">' +
                    '<input type="text" id="rolename" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                    '</div>' +
                    '<label class= "layui-form-label" >角色描述</label>' +
                    '<div class="layui-input-inline">' +
                    '<input type="text" id="roledesc" name="username" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input">' +
                    '</div>' +
                    '</div> '
                , btn: ['编辑', '取消']
                , btnAlign: 'c' //按钮居中
                , shade: 0 //不显示遮罩
                , success: function () {
                    $.get('http://localhost:52229/api/rbac/getroleone?id=' + id, function (res) {
                        $("#rolename").val(res.roleName);
                        $("#roledesc").val(res.roleDesc);

                    });
                }
                , yes: function () {  //添加按钮
                    var role = {};
                    role.Id = id;
                    role.RoleName = $("#rolename").val();
                    role.RoleDesc = $("#roledesc").val();
                    $.ajax({
                        url: "http://localhost:52229/api/rbac/uptrole",
                        data: JSON.stringify(role),
                        dataType: "json",
                        contentType: "application/json",
                        type: "Post",
                        success: function (res) {
                            if (res > 0) {
                                alert("修改成功")
                                layer.closeAll();
                                RoleShow();
                            }
                        }
                    });

                }
                , btn2: function () {  //取消关闭
                    layer.closeAll();
                }
            });

        });
    }

</script>

