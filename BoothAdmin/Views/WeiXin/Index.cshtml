
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
   <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
   <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />

</head>
<body>
    <form class="layui-form" action="">
        <label class="layui-form-label"> 用户账户：</label>
        <div class="layui-inline">
            <input class="layui-input" name="name" id="MemWx" autocomplete="off" placeholder="请输入账户">
        </div>
        用户昵称：
        <div class="layui-inline">
            <input class="layui-input" name="name" id="MemName" autocomplete="off" placeholder="请输入用户昵称">
        </div>
        <button type="button" class="layui-btn" data-type="reload" id="search">搜索</button>
    </form>


    <button type="button" class="layui-btn layui-btn-sm" lay-event="add" onclick="useradd()">
        <i class="layui-icon">&#xe654;</i>添加
    </button>
    <script type="text/html" id="toolbarDemo">
        <button type="button" class="layui-btn layui-btn-sm" lay-event="add" onclick="useradd()">
            <i class="layui-icon">&#xe654;</i>添加
        </button>
    </script>

    <table id="demo" lay-filter="demo" class="layui-hide"></table>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>

    <script src="~/layuiadmin/layui/layui.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/layuiadmin/jquery.unobtrusive-ajax.js"></script>
    <script>
        layui.use('table', function () {
            var table = layui.table;

            //第一个实例
            table.render({
                elem: '#demo'
                , height: 312
                , url: '/WeiXin/ShowWeiXin' //数据接口
                , page: true //开启分页
                , title: '市场数据表'
                , totalRow: true
                , cols: [[ //表头
                    { type: 'checkbox', fixed: 'left',field: 'id' }
                    , { field: 'id', title: 'ID', sort: true, fixed: 'left' }
                    , { field: 'memName', title: '昵称', sort: true }
                    , { field: 'memWx', title: '微信号' }
                    , { field: 'memPhone', title: '联系电话', sort: true }
                    , { field: 'memState', title: '状态' }
                    , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
                ]]
                , id: 'testReload'
                , limit: 5
                , page: true
                , parseData: function (res) { //res 即为原始返回的数据
                    console.log(res)
                    return {
                        "code": res.status, //解析接口状态
                        "msg": res.nessage, //解析提示文本
                        "count": res.total, //解析数据长度
                        "data": res.data.Item //解析数据列表
                    };
                }
            });
            table.on('tool(demo)', function (obj) {
                var data = obj.data;
                json = JSON.stringify(data);
                switch (obj.event) {
                    case 'edit':
                        var index = layer.open({
                            type: 2,
                            title: "编辑修改页面",
                            area: ["700px", "500px"],
                            fix: false,
                            maxmin: true,
                            shadeClose: true,
                            shade: 0.4,
                            skin: 'layui-layer-rim',
                            content: ["/WeiXin/Updwx?id=" + data.id],
                        });
                        break;
                    case 'del':
                        var delIndex = layer.confirm('真的删除id为' + data.id + "的信息吗?", function (delIndex) {
                            $.ajax({
                                url: '/WeiXin/Delwx',
                                type: "post",
                                data: { id: data.id },
                                success: function (suc) {
                                    if (suc > 0) {
                                        obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                                        layer.close(delIndex);
                                        console.log(delIndex);
                                        layer.msg("删除成功");
                                    } else {
                                        layer.msg("删除失败");
                                    }
                                }
                            });
                            layer.close(delIndex);
                        });
                        break;
                }
            });
            //查询

            $("#search").click(function (ev) {
                console.info("reload");
                var MemName = $("#MemName").val();
                if (MemName == null) {
                    MemName = "";
                }
                console.info("reload");
                var MemWx = $("#MemWx").val();
                if (MemWx == null) {
                    MemWx = "";
                }
                table.reload('testReload', {
                    url: '/WeiXin/SeleWx',
                    where: {
                        name: MemName,
                        wx: MemWx
                    }
                });
            });
        });

    </script>
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-danger layui-btn-sm" id="delAll" lay-event="delBatchAll">
            <i class="layui-icon"></i>批量删除
        </button>
    </div>

</body>
</html>
<script>

    $('#delAll').click(function () {
        var checkStatus = layui.table.checkStatus('testReload');
        if (checkStatus.data.length == 0) {
            parent.layer.msg('请先选择要删除的数据行！', { icon: 2 });
            return;
        }
        var ids = "";
        for (var i = 0; i < checkStatus.data.length; i++) {
            ids += checkStatus.data[i].id + ",";
        }
      
        layer.confirm('确定要全部删除吗？', {
            time: 20000, //20s后自动关闭
            btn: ['确定', '取消']
            , yes: function (index) {
                layer.close(index);
                $.ajax({
                    type: 'Get',
                    url: 'http://localhost:8060/api/default/delall?noList=' + ids,
                    success: function (ids) {
                       if (ids > 0) {
                           parent.layer.msg('删除中...', { icon: 16, shade: 0.3, time: 500 });
                           layer.msg('已删除!', {
                                icon: 1,
                                time: 1000,
                                end: function ()
                                {
                                    window.location.reload();
                                }
                            });
                        }
                        else {
                            layer.msg('删除失败', {
                                icon: 1,
                                time: 1000,
                                end: function ()
                                {
                                    window.location.reload();
                                }
                            });
                        }
                    }
                });
            }
        });
    });
    /*  ========== 弹出添加页面  button 事件 ==============*/
    function useradd() {
        layui.use('layer', function () {
            layer.open({
                type: 2,
                content: ["/WeiXin/Addwx"],   //添加页，后台controller转发到指定页
                area: ["700px", "500px"],
                title: ['用户添加'],
                fixed: false,
                //maxmin: true,
                shadeClose: true,
                end: function () {  //刷新页面
                    location.reload();
                }
            })
        })
    }
</script>
             




